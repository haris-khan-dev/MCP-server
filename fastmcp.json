{
  "name": "FastAPI MCP Server",
  "description": "MCP server for FastAPI application with user management, task management, and dice rolling",
  "version": "1.0.0",
  "dependencies": [
    "fastapi",
    "uvicorn",
    "aiohttp",
    "pydantic",
    "google-generativeai",
    "python-dotenv",
    "requests"
  ],
  "environment": {
    "API_BASE_URL": "http://localhost:8000",
    "GEMINI_API_KEY": ""
  },
  "transport": {
    "type": "stdio"
  },
  "tools": [
    "get_health_status",
    "get_app_info", 
    "get_all_users",
    "create_user",
    "get_user_by_id",
    "get_all_tasks",
    "create_task",
    "complete_task",
    "roll_dice",
    "get_app_statistics",
    "search_users_by_name",
    "get_pending_tasks",
    "get_completed_tasks"
  ]
}
